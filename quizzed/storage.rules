rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin
    function isAdmin() {
      // During development, allow any authenticated user to be admin
      return isAuthenticated();
      // For production, you might want to restrict by email verification:
      // return isAuthenticated() && request.auth.token.email_verified == true;
    }

    // Allow read access to all files for anyone
    match /{allPaths=**} {
      allow read: if true;
    }

    // Images folder - allow uploads for authenticated users
    match /images/{imageId} {
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Audio folder - allow uploads for authenticated users
    match /audio/{audioId} {
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Video folder - allow uploads for authenticated users
    match /video/{videoId} {
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
  }
}
